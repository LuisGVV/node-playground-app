{
    "rules": {
        "indent": ["warn", 4],
        "rules": {
            "eqeqeq": [2, "allow-null"],
            "linebreak-style": "off"
        },
        "parserOptions": {
            "ecmaVersion": 6,
            "sourceType": "module",
            "ecmaFeatures": {
                "jsx": true,
                "modules": true,
                "experimentalObjectRestSpread": true
            }
        }
    }
}
